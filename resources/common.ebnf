S          = #'\s*' ;
rS         = #'\s+' ;

(* TODO: merge number rules *)

(* HTML *)
mime-type = #'[a-z]+/[a-z0-9+-]+'
lang = #'[a-z]+(?:-[A-Za-z]+)?'
integer = #"-?[0-9]+"
non-negative-integer = #"[0-9]+"
floating-point-number = #"-?[0-9]*.[0-9]+"
any-number = integer | floating-point-number

(* CSS *)
number-float = #'-?[0-9]*.[0-9]+' ;
length-unit = 'em' | 'ex' | 'ch' | 'ic' | 'rem' | 'lh' | 'rlh'
            | 'vh' | 'vw' | 'vi' | 'vb' | 'vmin' | 'vmax'
            | 'px' | 'mm' | 'q' | 'cm' | 'in' |  'pt' | 'pc' | 'mozmm' ;

url = #'(?:https:|http:)?//[A-Za-z0-9._\-/&#=,?]+'
    | #'[A-Za-z0-9._\-/#=]+'
    | 'data:' mime-type ';base64,' #'[A-Za-z0-9+=/]*'

url-generic = #'[A-Za-z0-9$-_@.&+%=;/#?:]+'

charset = 'UTF-8'
        | 'utf-8'
        | 'iso-8859-15'
